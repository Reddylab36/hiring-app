pipeline{
    agent any
    tools{
        maven 'MVN_HOME'
    }
    stages{
        stage('checkout the code'){
            steps{
                git url:'https://github.com/Reddylab36/hiring-app.git', branch: 'main'
            }
        }
        stage('build the code'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('Generate sonarqube-analysis'){
            steps{
                withSonarQubeEnv(installationName: 'Sonarqube-server', credentialsId: 'sonar-token') {
                 sh 'mvn sonar:sonar'
                }
            }
        }
        stage('Upload War file to Nexus'){
            steps{
             nexusArtifactUploader artifacts: [
                 [
                     artifactId: 'hiring', 
                     classifier: '', 
                     file: 'techie-horizon', 
                     type: 'war'
                ]
            ], 
            credentialsId: 'nexus-server-2', 
            groupId: 'in.javahome', 
            nexusUrl: '3.101.56.142:8081', 
            nexusVersion: 'nexus3', 
            protocol: 'http', 
            repository: 'techie-horizon', 
            version: '0.1'
            }
        }
    }   
 }
